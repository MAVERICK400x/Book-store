<!DOCTYPE html>
<html lang="en">
<head>
    <title>Your Orders - Online Bookstore</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Online Bookstore</a>
            
            <!-- Navbar Right Side -->
            <div class="ms-auto">
                <% if (user) { %>
                    <span class="navbar-text text-white me-3">Welcome, <%= user.username %>!</span>
                    <a href="/cart" class="btn btn-secondary btn-sm">Cart</a>
                    <a href="/users/logout" class="btn btn-danger btn-sm">Logout</a>
                <% } else { %>
                    <a href="/users/login" class="btn btn-info btn-sm">Login</a>
                    <a href="/users/register" class="btn btn-warning btn-sm">Register</a>
                <% } %>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <h2>Your Orders</h2>
        <% if (orders.length > 0) { %>
            <% orders.forEach(order => { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Order ID: <%= order.id %></h5>
                        <p><strong>Shipping Address:</strong> <%= order.address %></p>
                        <p><strong>Contact Number:</strong> <%= order.phone %></p> <!-- ‚úÖ Phone Number Added -->
                        <ul class="list-group">
                            <% order.items.forEach(item => { %>
                                <li class="list-group-item">
                                    <strong><%= item.title %></strong> - ‚Çπ<%= item.price %>
                                </li>
                            <% }) %>
                        </ul>
                        <p class="mt-3"><strong>Subtotal: ‚Çπ<%= order.subtotal %></strong></p>
                        <p><strong>GST (18%): ‚Çπ<%= order.gst %></strong></p>
                        <p><strong>Shipping: ‚Çπ<%= order.shipping %></strong></p>
                        <h4><strong>Grand Total: ‚Çπ<%= order.grandTotal %></strong></h4>
                        <p><strong>Expected Delivery Date:</strong> <%= order.deliveryDate %></p>
                        <p><strong>Delivery Partner:</strong> <%= order.deliveryPartner %></p>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p>You have no orders yet.</p>
        <% } %>
    </div>

    <!-- Back Button -->
    <div class="mt-4 text-center">
        <a href="/" class="btn btn-secondary">‚Üê Back to Home</a>
    </div>

