<!DOCTYPE html>
<html lang="en">
<head>
    <title>Your Orders - Online Bookstore</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Online Bookstore</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <% if (user) { %>
                    <span class="navbar-text text-white me-3">Welcome, <%= user.username %>!</span>
                    <a href="/cart" class="btn btn-secondary btn-sm">Cart</a>
                    <a href="/users/logout" class="btn btn-danger btn-sm">Logout</a>
                <% } else { %>
                    <a href="/users/login" class="btn btn-info btn-sm">Login</a>
                    <a href="/users/register" class="btn btn-warning btn-sm">Register</a>
                <% } %>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <h2 class="text-center">Your Orders</h2>
        <% if (orders.length > 0) { %>
            <% orders.forEach(order => { %>
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Order ID: <%= order.id %></h5>
                        <p><strong>Shipping Address:</strong> <%= order.address %></p>
                        <p><strong>Contact Number:</strong> <%= order.phone %></p>

                        <!-- Responsive Order List -->
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Book</th>
                                        <th>Price (‚Çπ)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% order.items.forEach(item => { %>
                                        <tr>
                                            <td><strong><%= item.title %></strong></td>
                                            <td>‚Çπ<%= item.price %></td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>

                        <p class="mt-3"><strong>Subtotal: ‚Çπ<%= order.subtotal %></strong></p>
                        <p><strong>GST (18%): ‚Çπ<%= order.gst %></strong></p>
                        <p><strong>Shipping: ‚Çπ<%= order.shipping %></strong></p>
                        <h4><strong>Grand Total: ‚Çπ<%= order.grandTotal %></strong></h4>
                        <p><strong>Expected Delivery Date:</strong> <%= order.deliveryDate %></p>
                        <p><strong>Delivery Partner:</strong> <%= order.deliveryPartner %></p>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p class="text-center">You have no orders yet.</p>
        <% } %>
    </div>

    <!-- Back Button -->
    <div class="mt-4 text-center">
        <a href="/" class="btn btn-secondary">‚Üê Back to Home</a>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p>¬© 2025 Online Bookstore. All rights reserved.</p>
        <p>Contact us: üìû <strong>+91 98765 43210</strong></p>
        <p>Follow us on: 
            <a href="#" class="text-white mx-2">Facebook</a> | 
            <a href="#" class="text-white mx-2">Instagram</a> | 
            <a href="#" class="text-white mx-2">Twitter</a>
        </p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
